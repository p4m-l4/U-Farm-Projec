doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
    link(rel='stylesheet' href='../css/urban.css')
    title Farmer One Registration Form
nav.navbar
    .container-fluid
        a.navbar-brand(href='/') Urban Farming Initiative
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon

.row.signinNav
    .col-6
        .container4
            img#imgPic(src='https://knnindia.co.in/uploads/newsfiles/Agri-30-10-20220.jpg')
    .col-6 
        form.form(action='/user/registerFarmer' name='register' method='post')
            h3.heading Farmer One Registration Form
                .row
                    #cell.col.input-control
                        label(for="firstName") First name
                            .error
                        br
                        input(type="text" name='firstName')
                    #cell.col
                        label(name='lastName') Last name
                        br
                        input(type="text" name='lastName')
                    #cell.col
                        label(name='gender') Gender
                        br
                        input(type="text" name='gender')
                    #cell.col
                        label(name='birthDate') Date of Birth
                        br
                        input(type="date" name='birthDate')
                .row
                    #cell.col
                        label(name='phoneNumber') Phone Number
                        br
                        input(type="number" name='phoneNumber')
                    #cell.col
                        label(name='NIN') Enter National ID number
                        br
                        input(type="text" name='NIN')
                    .col
                        label(name='userID') Unique Farmer One ID
                        br
                        input(type="text" name='userID')
                    .col
                        label(name='registrationDate') Date of registration
                        br
                        input(type="date" name='registrationDate')
                .row
                    .col
                        label(name='activities') Activities involved in
                        br
                        input(type="text" name='activities')
                    .col
                        label(name='ward') Select ward
                        br
                        input(type="text" name='ward')
                    .col
                        label(name='wardDuration') Duration of stay in ward
                        br
                        input(type="text" name='wardDuration')
                    .col
                        label(name='residence') Residence type
                        br
                        input(type="text" name='residence')
                .row
                    .col.input-control
                        label(for="password") Password
                        .error
                        br
                        input(type='text' name='password')
                    .col.input-control
                        label(for="confirmpassword") Confirm Password
                        .error
                        br
                        input(type="text" name='confirmpassword')
                .row
                    .col
                        label(name='directionsHome') Directions to home
                        br
                        input.text(type="text" name='directionsHome')
                button.btn.btn-primary.card-button(type='submit') Register

#footer.container-fluid
    .row.foot
        .col-4
            p.footer-txt A network by the farmers for the farmers! Join the ever expanding U-Farm network today.
            .br
        .col-5
            p.footer-txt  Not a farmer? Browse the different products on display and find farmers near you.
            .br
            .ul 
                .li.footer-txt  Home
                .li.footer-txt  Contact us 
                .li.footer-txt  Log in
        .col-3
script(src='../app.js')
script(src='css/bootstrap/js/bootstrap.bundle.js')
