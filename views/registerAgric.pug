doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
    link(rel='stylesheet' href='../css/urban.css')
    title Agric Officer Registration Form
nav.navbar
    .container-fluid
        a.navbar-brand(href='/') Urban Farming Initiative
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon


.row.signinNav
    .col-6
        .container4
            img#imgPic(src='https://knnindia.co.in/uploads/newsfiles/Agri-30-10-20220.jpg')
    .col-6.register-form 
        form.form(action='/user/registeragricofficer' name='registerAgric' method='post')
            h3.heading.register-heading Agricultural Officer Registration Form
                .row
                    #cell.col.input-control
                        label.label(for="firstName") First name
                            .error
                        br
                        input.form-control(type="text" name='firstName')
                    #cell.col.input-control
                        label.label(for="lastName") Last name
                            .error
                        br
                        input.form-control(type="text" name='lastName')
                    #cell.col.input-control
                        label.label(name='gender') Gender
                            .error
                        br
                        select.form-select(aria-label='Default select example' name='gender' type='text')
                            option(selected='') Select one
                            option(value='male')  Male
                            option(value='female')  Female
                .row
                    #cell.col
                        label.label(for="birthDate") Date of Birth
                            .error
                        br
                        input.form-control(type='date' name='birthDate')  
                    #cell.col.input-control
                        label.label(for="phoneNumber") Phone Number
                            .error
                        br
                        input.form-control(type='number' name='phoneNumber')
                    #cell.col.input-control
                        label.label(for="NIN") Enter National ID number
                            .error
                        br
                        input.form-control(type='text' name='NIN')
                .row
                    #cell.col.input-control
                        label.label(for="userID") Unique Farmer One ID
                            .error
                        br
                        input.form-control(type='text' name='userID')
                    #cell.col.input-control
                        label.label(for="registrationDate") Date of registration
                            .error
                        br
                        input.form-control(type='date' name='registrationDate')
                    #cell.col.input-control
                        label.label(name='activities') Activities involved in
                            .error
                        br
                        select.form-select(aria-label='Default select example' name='activities' type='text')
                            option(selected='') Select one
                            option(value='horticulture')  Horticulture
                            option(value='poultry')  Poultry
                            option(value='dairy')  Dairy products
                .row
                    #cell.col.input-control
                        label.label(name='ward') Select ward
                            .error
                        br
                        select.form-select(aria-label='Default select example' name='ward' type='text')
                            option(selected='') Select one
                            option(value='ward1')  Masajja Division - Ward 1
                            option(value='ward2')  Masajja Division - Ward 2
                            option(value='ward3')  Masajja Division - Ward 3
                            option(value='ward4')  Masajja Division - Ward 4
                    #cell.col.input-control
                        label.label(for="wardDuration") Duration of stay in ward
                            .error
                        br
                        input.form-control(type='number' name='wardDuration')
                    #cell.col.input-control
                        label.label(for="residence") Residence type
                            .error
                        br
                        input.form-select(type='text' name='residence')
                .row
                    #cell.col
                        label.label Role
                            .error
                        br
                        select.form-select(aria-label='Default select example' name='role' type='text')
                            option(selected='') Select one
                            option(value='agriculturalofficer') Agricultural Officer
                    #cell.col
                        label.label(for="password") Password
                            .error
                        br
                        input.form-control(type='text' name='password')
                    #cell.col.input-control
                        label.label(for="confirmpassword") Confirm Password
                            .error
                        br
                        input.form-control(type="text" name='confirmpassword')
                .row
                    #cell.col.input-control
                        label.label(for="directionsHome") Directions to home
                            .error
                        br
                        textarea#exampleFormControlTextarea1.form-control.text(type="text" name='directionsHome')

                .row
                button.btn.btn-primary.card-button(type='submit') Register


#footer.container-fluid
    .row.foot
        .col-4
            p.footer-txt A network by the farmers for the farmers! Join the ever expanding U-Farm network today.
            .br
        .col-5
            p.footer-txt  Not a farmer? Browse the different products on display and find farmers near you.
            .br
            .ul 
                .li.footer-txt  Home
                .li.footer-txt  Contact us 
                .li.footer-txt  Log in
        .col-3
script(src='./app.js')
script(src='css/bootstrap/js/bootstrap.bundle.js')
