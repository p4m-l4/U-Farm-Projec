doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
    link(rel='stylesheet' href='../css/urban.css')
    title Agric Officer Registration Form
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    .container-fluid
        a.navbar-brand(action='/') Urban Farming Initiative
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.me-auto.mb-2.mb-lg-0
                li.nav-item
                    a.nav-link.active(aria-current='page' action='/') Home
                li.nav-item
                    a.nav-link(action='/') Link
                li.nav-item.dropdown
                    a.nav-link.dropdown-toggle(action='/' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                        | Account
                    ul.dropdown-menu
                        li
                            a.dropdown-item(action='/') Login
                        li
                            a.dropdown-item(action='/') Sign Up
.container
    form(action='/user/registeragricofficer' method='post')
        h3.heading Farmer One Registration Form
        .row
            #cell.col
                label First name
                br
                input(type="text" name='firstName')
            #cell.col
                label  Last name
                br
                input(type="text" name='lastName')
            #cell.col
                label Gender
                br
                input(type='text' name='gender')
            #cell.col
                label Date of Birth
                br
                input(type='date' name='birthDate')  
        .row
            #cell.col
                label  Phone Number
                br
                input(type='number' name='phoneNumber')
            #cell.col
                label  Enter National ID number
                br
                input(type='text' name='NIN')
            .col
                label  Unique Farmer One ID
                br
                input(type='text' name='userID')
            .col
                label  Date of registration
                br
                input(type='date' name='registrationDate')
        .row
            .col
                label  Activities involved in
                br
                input(type='text' name='activities')
            .col
                label  Select ward
                br
                input(type='text' name='ward')
            .col
                label  Duration of stay in ward
                br
                input(type='number' name='wardDuration')
            .col
                label  Residence type
                br
                input(type='text' name='residence')
        .row
            .col
                label  Password
                br
                input(type='text' name='password')
            .col
                label  Confirm Password
                br
                input(type="text" name='confirmpassword')
        .row
            .col
                label  Directions to home
                br
                input.text(type='text' name='directionsHome')
            
        button.btn.btn-primary.card-button(type='submit') Register


#footer.container-fluid
script(src='css/bootstrap/js/bootstrap.bundle.js')
