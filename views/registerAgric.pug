doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
    link(rel='stylesheet' href='../css/urban.css')
    title Agric Officer Registration Form
nav.navbar
    .container-fluid
        a.navbar-brand(href='/') Urban Farming Initiative
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon

.container
    form(action='/user/registeragricofficer' name='registerAgric' method='post')
        h3.heading Agricultural Officer Registration Form
        .row
            #cell.col.input-control
                label(for="firstName") First name
                .error
                br
                input(type="text" name='firstName')
            #cell.col.input-control
                label(for="lastName") Last name
                .error
                br
                input(type="text" name='lastName')
            #cell.col.input-control
                label(for="gender") Gender
                .error
                br
                input(type='text' name='gender')
            #cell.col
                label(for="birthDate") Date of Birth
                .error
                br
                input(type='date' name='birthDate')  
        .row
            #cell.col.input-control
                label(for="phoneNumber") Phone Number
                .error
                br
                input(type='number' name='phoneNumber')
            #cell.col.input-control
                label(for="NIN") Enter National ID number
                .error
                br
                input(type='text' name='NIN')
            #cell.col.input-control
                label(for="userID") Unique Farmer One ID
                .error
                br
                input(type='text' name='userID')
            #cell.col.input-control
                label(for="registrationDate") Date of registration
                .error
                br
                input(type='date' name='registrationDate')
        .row
            #cell.col.input-control
                label(for="activities")  Activities involved in
                .error
                br
                input(type='text' name='activities')
            #cell.col.input-control
                label(for="ward") Select ward
                .error
                br
                input(type='text' name='ward')
            #cell.col.input-control
                label(for="wardDuration") Duration of stay in ward
                .error
                br
                input(type='number' name='wardDuration')
            #cell.col.input-control
                label(for="residence") Residence type
                .error
                br
                input(type='text' name='residence')
        .row
            #cell.col
                label Role
                br
                select.form-select(aria-label='Default select example' name='role' type='text')
                    option(selected='') Select one
                    option(value='agriculturalofficer') Agricultural Officer
            #cell.col
                label(for="password") Password
                .error
                br
                input(type='text' name='password')
            #cell.col.input-control
                label(for="confirmpassword") Confirm Password
                .error
                br
                input(type="text" name='confirmpassword')
        .row
            #cell.col.input-control
                label(for="directionsHome") Directions to home
                .error
                br
                input.text(type='text' name='directionsHome')

        .row
        button.btn.btn-primary.card-button(type='submit') Register


#footer.container-fluid
    .row.foot
        .col-4
            p.footer-txt A network by the farmers for the farmers! Join the ever expanding U-Farm network today.
            .br
        .col-5
            p.footer-txt  Not a farmer? Browse the different products on display and find farmers near you.
            .br
            .ul 
                .li.footer-txt  Home
                .li.footer-txt  Contact us 
                .li.footer-txt  Log in
        .col-3
script(src='./app.js')
script(src='css/bootstrap/js/bootstrap.bundle.js')
