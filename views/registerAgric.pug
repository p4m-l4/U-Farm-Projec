doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
    link(rel='stylesheet' href='../css/urban.css')
    title Farmer One Registration Form
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    .container-fluid
        a.navbar-brand(action='/') Urban Farming Initiative
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.me-auto.mb-2.mb-lg-0
                li.nav-item
                    a.nav-link.active(aria-current='page' action='/') Home
                li.nav-item
                    a.nav-link(action='/') Link
                li.nav-item.dropdown
                    a.nav-link.dropdown-toggle(action='/' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                        | Account
                    ul.dropdown-menu
                        li
                            a.dropdown-item(action='/') Login
                        li
                            a.dropdown-item(action='/') Sign Up
.container
    #regForm.form.registration(action='/' name='register' method='POST')
        h3.heading Farmer One Registration Form
        .row
            #cell.col
                label(name='firstName') First name
                br
                input
            #cell.col
                label(name='lastName')  Last name
                br
                input
            #cell.col
                label(name='gender')  Gender
                br
                input
            #cell.col
                label(name='birthDate')  Date of Birth
                br
                input
        .row
            #cell.col
                label(name='phoneNumber')  Phone Number
                br
                input
            #cell.col
                label(name='NIN')  Enter National ID number
                br
                input
            .col
                label(name='farmerID')  Unique Farmer One ID
                br
                input
            .col
                label(for='registrationDate')  Date of registration
                br
                input
        .row
            .col
                label(name='activities')  Activities involved in
                br
                input
            .col
                label(name='ward')  Select ward
                br
                input
            .col
                label(name='wardDuration')  Duration of stay in ward
                br
                input
            .col
                label(name='residence')  Residence type
                br
                input
        .row
            .col
                label(name='directionsHome')  Directions to home
                br
                input.text
        a.btn.btn-primary.card-button(href='/dashboard/agricDashboard') Register
#footer.container-fluid
script(src='css/bootstrap/js/bootstrap.bundle.js')
