doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
    link(rel='stylesheet' href='../css/urban.css')
    title Farmer One Registration Form
nav.navbar
    .container-fluid
        a.navbar-brand(href='/') Urban Farming Initiative
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        
.row.signinNav
    .col-6
        .container4
            img#imgPic(src='https://knnindia.co.in/uploads/newsfiles/Agri-30-10-20220.jpg')
    .col-6 
        #regForm.form.registration(action='/register' name='register' method='POST')
            h3.heading Farmer One Registration Form
            .row
                #cell.col
                    label(name='firstName') First name
                    br
                    input
                #cell.col
                    label(name='lastName') Last name
                    br
                    input
                #cell.col
                    label(name='gender') Gender
                    br
                    input
                #cell.col
                    label(name='birthDate') Date of Birth
                    br
                    input
            .row
                #cell.col
                    label(name='phoneNumber') Phone Number
                    br
                    input
                #cell.col
                    label(name='NIN') Enter National ID number
                    br
                    input
                .col
                    label(name='userID') Unique Farmer One ID
                    br
                    input
                .col
                    label(name='registrationDate') Date of registration
                    br
                    input
            .row
                .col
                    label(name='activities') Activities involved in
                    br
                    input
                .col
                    label(name='ward') Select ward
                    br
                    input
                .col
                    label(name='wardDuration') Duration of stay in ward
                    br
                    input
                .col
                    label(name='residence') Residence type
                    br
                    input
            .row
                .col
                    label(name='directionsHome') Directions to home
                    br
                    input.text
            a.btn.btn-primary.card-button(action='/' method='POST') Register
#footer.container-fluid
    .row.foot
        .col-4
            p.footer-txt A network by the farmers for the farmers! Join the ever expanding U-Farm network today.
            .br
        .col-5
            p.footer-txt  Not a farmer? Browse the different products on display and find farmers near you.
            .br
            .ul 
                .li.footer-txt  Home
                .li.footer-txt  Contact us 
                .li.footer-txt  Log in
        .col-3
script(src='css/bootstrap/js/bootstrap.bundle.js')
