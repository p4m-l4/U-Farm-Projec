doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
    link(rel='stylesheet' href='../css/urban.css')
    title Shop with us!
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    .container-fluid
        a.navbar-brand(href='/') Urban Farming Initiative
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        
.row.signinNav
    .col-6
        .container4
            img#imgPic(src='https://knnindia.co.in/uploads/newsfiles/Agri-30-10-20220.jpg')
    .col-6 
        form.signinForm
        #regForm.form.registration(action='/user/registerGeneral' name='register' method='post')
            h3.heading
                | Shop with us. 
                br
                |  A product for everyone!
            .row
                #cell.col
                    label(for='firstName') First name
                    br
                    input(type="text" name='firstName')
                #cell.col
                    label(for='lastName') Last name
                    br
                    input(type="text" name='lastName')
                #cell.col
                    label(for='gender') Gender
                    br
                    input(type="text" name='gender')
            .row
                #cell.col
                    label(for='birthDate') Date of Birth
                    br
                    input(type="text" name='birthDate')
                #cell.col
                    label(for='email') Email
                    br
                    input(type="text" name='email')
                #cell.col
                    label(for='phoneNumber') Phone Number
                    br
                    input(type="text" name='phoneNumber')
            .row
                .col
                    label(for='location') Location / District
                    br
                    input(type="text" name='location')
                #cell.col
                    label(for='password') Password
                    br
                    input(type="text" name='password')
                #cell.col
                    label(ofor='confirmpassword') Confirm Password
                    br
                    input(type="text" name='confirmpassword')
            a.btn.btn-primary.card-button(type='submit' href='/') Register
#footer.container-fluid
    .row.foot
        .col-4
            p.footer-txt A network by the farmers for the farmers! Join the ever expanding U-Farm network today.
            .br
        .col-5
            p.footer-txt  Not a farmer? Browse the different products on display and find farmers near you.
            .br
            .ul 
                .li.footer-txt  Home
                .li.footer-txt  Contact us 
                .li.footer-txt  Log in
        .col-3
script(src='css/bootstrap/js/bootstrap.bundle.js')
