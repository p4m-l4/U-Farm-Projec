doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
    link(rel='stylesheet' href='../css/urban.css')
    title Urban Farmer Registration Form
nav.navbar
    .container-fluid
        a.navbar-brand(href='/') Urban Farming Initiative
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon

.container
    .col-6
        .container4
            img#imgPic(src='https://knnindia.co.in/uploads/newsfiles/Agri-30-10-20220.jpg')
    .col-6 
        form.signinForm.form(action='/user/registerGeneral' name='registerGeneral' method='post')
            h3.heading Urban Farmer Registration Form
            .row
                #cell.col
                    label(for='firstName') First name
                    br
                    input(type="text" name='firstName')
                #cell.col
                    label(for='lastName') Last name
                    br
                    input(type="text" name='lastName')
                #cell.col
                    label(for='gender') Gender
                    br
                    input(type="text" name='gender')
            .row
                #cell.col
                    label(for='birthDate') Date of Birth
                    br
                    input(type="date" name='birthDate')
                #cell.col
                    label(for='phoneNumber') Phone Number
                    br
                    input(type="number" name='phoneNumber')
                #cell.col
                    label(for='NIN') Enter National ID number
                    br
                    input(type="text" name='NIN')
            .row
                #cell.col
                    label(for='userID') Unique Urban Farmer ID
                    br
                    input(type="text" name='userID')
                #cell.col
                    label(for='activities') Activities involved in
                    br
                    input(type="text" name='activities')
                #cell.col
                    label(name='ward') Select ward
                    br
                    input(type="text" name='ward')
            .row 
                #cell.col
                    label Role
                    br
                    select.form-select(aria-label='Default select example' name='role' type='text')
                        option(selected='') Select one
                        option(value='urbanfarmer') Urban farmer
                #cell.col
                    label(name='wardDuration') Duration of stay in ward
                    br
                    input(type="text" name='wardDuration')
                #cell.col
                    label(name='residence') Residence type
                    br
                    input(type="text" name='residence')
            .row
                #cell.col
                    label(for="password") Password
                    .error
                    br
                    input(type='text' name='password')
                #cell.col.input-control
                    label(for="confirmpassword") Confirm Password
                    .error
                    br
                    input(type="text" name='confirmpassword')
            .row
                #cell.col
                    label(name='directionsHome') Directions to home
                    br
                    input.text(type="text" name='directionsHome')
            button.btn.btn-primary.card-button(type='submit') Register

#footer.container-fluid
    .row.foot
        .col-4
            p.footer-txt A network by the farmers for the farmers! Join the ever expanding U-Farm network today.
            .br
        .col-5
            p.footer-txt  Not a farmer? Browse the different products on display and find farmers near you.
            .br
            .ul 
                .li.footer-txt  Home
                .li.footer-txt  Contact us 
                .li.footer-txt  Log in
        .col-3
script(src='css/bootstrap/js/bootstrap.bundle.js')
